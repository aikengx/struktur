<div id="manufacturer-box">
  <div>

<form action="/manufacturer/add" method="POST" id="form-container" enctype="multipart/form-data">
<h2>Add Manufacturer</h2>
<br>
  <label for="name">Manufacturer</label>
  <input id="name" type="text" name="name" placeholder="Name" required>
  <br><br>
  <label for="website">URL</label>
  <input id="website" type="url" name="website" placeholder="http://www.xyz.com" required>
  <br><br>
  <label for="logo">Upload logo</label>
  <br><br>
  <input id="logo" type="file" name="logo" required>
  <br><br>
  <div>
  {{#if message}}
    <div class="error-message">
      <span id="message">{{ message }}</span>
    </div>
  {{/if}}
  </div>
  <br>
  <button id="manufacturerbutton">Add Manufacturer</button>
  <br><br>
<div>
  <p id="backhome">Back to <a href="/home">Home</a></p>
</div>
</form>

  </div>
</div>

