<div id="home-title">
<div>
  <h1>Manufacturer Management:</h1>
</div>
<div class="btn-group" role="group" aria-label="Basic example" id="button-controls">
  <button type="button" class="btn btn-secondary"><a id="chgpass" href="/user/password/{{user.id}}"><i class="fas fa-key" title="Change Password"></i></a></button>
  <button type="button" class="btn btn-secondary"><a id="logout" href="/logout"><i class="fas fa-lock" title="Express Log Out"></i></a></button>
</div>
</div>

  <div class="user-container">
  {{#each hbsManufacturers}}
  <div class="user-card">
  <img src="{{this.imgPath}}" alt="" height="auto" width="100">
  <br><br>
  <ul>
    <li><strong>Name: </strong>{{this.name}}</li>
    <li><strong>Website: </strong><a href="{{this.website}}">{{this.website}}</a></li>
    <li><strong>Created by: </strong>{{this.created_by}}</li>
  </ul>
  <div>
    <a href="/manufacturer/update/{{this._id}}"><i class="fas fa-edit" title="Edit Manufacturer" style="color: black;"></i></a>
    <a href="/manufacturer/delete/{{this._id}}"><i class="fas fa-trash-alt" title="Delete Manufacturer" style="color: black;"></i></a>
    <br>
  </div>
  </div>
  {{/each}}
</div>